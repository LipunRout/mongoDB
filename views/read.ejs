<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Backend</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
      <div class="nav pb-10">
        <a href="/ " class="text-blue-500">Back to home</a>
      </div>
      <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
      <% if(users.length >0) { %>
      
        <div class="users flex gap-3 flex-wrap">
          <% users.forEach(function(user){ %>
          <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
            <div class="image w-full h-72  rounded-lg bg-zinc-700">
              <img class="w-full h-full overflow-hidden object-cover" src="<%= user.image %>" alt="">
            </div>
            <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
            <h5 class="text-zinc-500"><%= user.email %></h5>
            <div class="flex gap-3 mt-10">
              <a href="/edit/<%= user._id %>" class="text-zinc-600">Edit user</a>
              <a href="/delete/<%= user._id %>" class="text-red-500">Delete user</a>
            </div>
          </div>
  
          <% }) %>

        <% }else { %>
          <h3 class="text-zinc-500">No Users yet.!</h3>

          <% } %>



      </div>
    </div>
  </body>
</html>
